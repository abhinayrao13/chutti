<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Notice Board</h3>
    <%= link_to "Add Notice", "/notices/new", class: "btn btn-primary pull-right" %>
  </div>
<% if flash[:notice] %>
  <div class="container-fluid"><%= flash[:notice] %></div>
<% end %>

<% if @notice != nil && @notice.count != 0 %>
  <!-- <div class="box box-primary"> -->
    <div  id="table", class="container-fluid" >
    </br>
      <% @notice.each do |f|%>
        <div class="post">
          <div class="user-block">
            <img class="img-circle img-bordered-sm" src="<%= f.user.image.url%>" alt="user image">
            <span class='username'>
              <a href="#"><%=f.user.name%></a>
            </span>
            <span class='description'>posted on - <%=f.posted_on%></span>
          </div><!-- /.user-block -->
          <p>
              <b>Subject: &nbsp;</b><%= f.subject%>
          </p>

            <p style="padding-left: 50px;">
              <%= f.content%>
            </p>

        </div><!-- /.post -->
      <% end%>
    </div>
  <!-- </div> -->
<%else%>
    <div class="box-header">
      <h3 class="box-title">There Are No notices</h3>
    </div>
  <!-- </div> -->
<% end%>
