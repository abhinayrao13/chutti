<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Change password</h3>
  </div>
  <!-- /.box-header -->
  <!-- form start -->
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :multipart => true }) do |f| %>
    <div class="box-body">
      <%= devise_error_messages! %>
      <div class="form-group">
        <label>Password</label>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Enter New Password", class: "form-control" %>
      </div>
      <div class="form-group">
        <label>Password Confirmation</label>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Retype New Password", class: "form-control" %>
      </div>
      <div class="form-group">
        <label>Current Password</label>
        <%= f.password_field :current_password, autocomplete: "off", placeholder: "Enter current Password", class: "form-control" %>
        <p class="help-block">We need your current password to confirm your changes</p>
      </div>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">
      <%= f.submit "Update", :class => "btn btn-primary" %>
      <%= link_to "Back", "/list_users/#{current_user.id}/edit", class: "btn btn-default pull-right" %>
    </div>
  <% end %>
</div>

