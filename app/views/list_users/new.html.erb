<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Add New Employee</h3>
  </div>
  <!-- /.box-header -->
  <!-- form start -->
  <%= form_for(@user, url: "/list_users", method: :post ) do |f| %>
    <div class="box-body">
      <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, autofocus: true, placeholder: "Enter Name", class: "form-control" %>
        <%= error_messages!(@user, :name) %>
      </div>
      <div class="form-group">
        <label>Email</label>
        <%= f.text_field :email, placeholder: "Enter Email", class: "form-control" %>
        <%= error_messages!(@user, :email) %>
      </div>
      <div class="form-group">
        <label>Password</label>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Enter Password", class: "form-control"  %>
        <%= error_messages!(@user, :password) %>
      </div>
      <div class="form-group">
        <%= radio_button("user", "gender", "male", :checked => true) %>
        <%= f.label :male %>
        <%= radio_button("user", "gender", "female") %>
        <%= f.label :female %>
      </div>
      <div class="form-group">
        <label>Role: </label>
        <%= f.collection_select(:role_id, Role.all.reverse, :id, :user_role, class: "form-control") %>
        <%= error_messages!(@user, :role_id) %>
      </div>
      <div class="form-group">
        <label>Set Leaves</label>
        <%= f.text_field :max_leaves, value: 12, class: "form-control" %>
        <%= error_messages!(@user, :max_leaves) %>
      </div>
      <div class="form-group">
        <label>Phone</label>
        <%= f.text_field :phone_no, placeholder: "Enter Phone number", class: "form-control" %>
        <%= error_messages!(@user, :phone_no) %>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">
      <%= f.submit "Submit", :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>
